@using BlazorEnabledModule.Components
<!DOCTYPE html>
<html lang="nl">
    <head>
        <meta charset="utf-8">
        <base href=@Href("~/") />
        <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)" render-mode="ServerPrerendered" />
        
        <title>@RenderTitleSegments(Site.SiteName, "before")</title>
        
        <style asp-name="bootstrap"></style>
        <script asp-name="bootstrap" at="Foot"></script>

        <resources type="Meta"/>
        <resources type="HeadLink"/>
        <resources type="Stylesheet"/>
        <resources type="HeadScript"/>
    </head>
    <body dir="@Orchard.CultureDir()">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
            <div class="container">
                <a class="navbar-brand" href="@Href("~/")">@Site.SiteName</a>
            </div>
        </nav>
        
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @await RenderSectionAsync("Header", false)

                    @*  <component type="typeof(Message)" render-mode="ServerPrerendered" /> *@
                    @await RenderBodyAsync()
                </div>
            </div>
            <hr />
            <footer class="row">
                <div class="col-lg-12">
                    @await RenderSectionAsync("Footer", false)
                </div>
            </footer>
        </div>

        <script asp-name="jquery" use-cdn="true" at="Foot"></script>
        
        <script src="_framework/blazor.server.js"></script>

        <resources type="FootScript"/>
    </body>
</html>